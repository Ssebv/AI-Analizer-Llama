# Configuración de Llama/Ollama
OLLAMA_BASE_URL=http://localhost:11434
LLAMA_MODEL=llama3:8b
EMBEDDING_MODEL=llama3:8b

# Configuración de datos
EXCEL_PATH=src/data/noticias_test_ingeniero_IA.xlsx

# Configuración de ChromaDB/VectorStore
CHROMA_PERSIST_DIRECTORY=./chroma_db
COLLECTION_NAME=news_collection
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Configuración de embeddings
EMBEDDING_BASE_URL=http://localhost:11434

# Configuración del retriever
RETRIEVER_SEARCH_TYPE=mmr
RETRIEVER_K=6
RETRIEVER_FETCH_K=20
RETRIEVER_LAMBDA_MULT=0.7
USE_COMPRESSION=True

# Configuración de la aplicación Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=12345

# Configuración de análisis de noticias
BATCH_SIZE=50
MAX_MEMORY_WINDOW=5

# Configuración de LLM
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048

# Configuración de filtros por defecto
DEFAULT_MEDIOS="El Mercurio,La Tercera,El Sur,La Estrella"
DEFAULT_SECCIONES="Deportes,Nacional,Actualidad,Opinión"